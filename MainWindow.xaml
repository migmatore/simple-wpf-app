                    <Button Content="Home" Style="{StaticResource menuButton}"></Button>
                    <Button Content="Home" Style="{StaticResource menuButton}"></Button>
                    <Button Content="Home" Style="{StaticResource menuButton}"></Button>
                </StackPanel>    
            </Grid>
            
        </Border>

