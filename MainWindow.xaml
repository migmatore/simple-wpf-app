                                Click="ButtonMinimize_OnClick">
                            <ContentControl Width="13" Height="13" Content="{StaticResource MinimizeIcon}"
                                            VerticalAlignment="Center" HorizontalAlignment="Center"></ContentControl>
                        </Button>
                        <Button Grid.Column="2" Width="23" Height="23" HorizontalAlignment="Center"
                                Style="{StaticResource windowButton}"
                                VerticalAlignment="Center"
                                Click="ButtonMaximize_OnClick">
                            <ContentControl Width="13" Height="13" Content="{StaticResource MaximizeIcon}"
                                            VerticalAlignment="Center" HorizontalAlignment="Center"></ContentControl>
                        </Button>
                        <Button Grid.Column="3" Width="23" Height="23" HorizontalAlignment="Center"
